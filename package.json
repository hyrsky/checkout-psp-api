{
  "name": "checkout-psp-api",
  "version": "0.0.0-development",
  "description": "A library for the Finnish Checkout payment system integration",
  "main": "dist/lib/index.js",
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "tsc --module commonJS",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src --excludeNotExported",
    "commit": "git-cz",
    "test": "jest --coverage",
    "debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyrsky/checkout-psp-api.git"
  },
  "author": "Santeri Hurnanen <santeri@oikeuttaelaimille.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyrsky/checkout-psp-api/issues"
  },
  "homepage": "https://github.com/hyrsky/checkout-psp-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.4",
    "@types/request-promise-native": "^1.0.15",
    "@types/uuid": "^3.4.4",
    "commitizen": "^3.0.7",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-config": "^24.5.0",
    "lint-staged": "^8.1.5",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  }
}
